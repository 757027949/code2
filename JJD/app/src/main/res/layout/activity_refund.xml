<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bak"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/left_menu_foused"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="50px">

                    <TextView
                        android:id="@+id/hint_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退款金额："
                        android:textColor="#999"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/hint_money"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20px"
                        android:text="￥0.0"
                        android:textColor="#666"
                        android:textSize="35px" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/stroke"
                    android:layerType="software" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="50px"
                    android:paddingRight="50px"
                    android:paddingTop="20px">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单单号："
                            android:textColor="#999"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/order_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="#666"
                            android:textSize="28px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单状态："
                            android:textColor="#999"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="#666"
                            android:textSize="28px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;价："
                            android:textColor="#999"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="0元"
                            android:textColor="#666"
                            android:textSize="28px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总&#160;&#160;人&#160;&#160;数："
                            android:textColor="#999"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/persons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="0人"
                            android:textColor="#666"
                            android:textSize="28px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;点："
                            android:textColor="#999"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20px"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:singleLine="true"
                            android:textColor="#666"
                            android:textSize="28px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="@android:color/white"
                android:paddingBottom="20px"
                android:paddingLeft="50px"
                android:paddingTop="20px"
                android:text="退款理由："
                android:textColor="#666"
                android:textSize="30px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="50px"
                android:paddingRight="50px">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/mes"
                    android:layout_width="match_parent"
                    android:layout_height="300px"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/edit_bak"
                    android:gravity="top|left"
                    android:hint="亲，那里不满意？"
                    android:inputType="text"
                    android:maxLength="255"
                    android:padding="20px"
                    android:textColor="#e0e1ea"
                    android:textColorHint="#e0e1ea"
                    android:textSize="28px"
                    app:emptyErrorString="@string/edittext_empty_error_txt" />

            </com.zhy.autolayout.AutoLinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_margin="50px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="20px"
                android:background="@drawable/button_bak"
                android:text="@string/txt_commit"
                android:textColor="@android:color/white"
                android:textSize="35px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
