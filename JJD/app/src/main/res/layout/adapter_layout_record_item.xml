<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rel_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="25px">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="@android:color/black"
            android:textSize="28px"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/hint_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginBottom="15px"
            android:layout_marginTop="15px"
            android:text="学车日期"
            android:textSize="25px" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hint_day"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/hint_day"
            android:text="2016-4-15"
            android:textColor="@android:color/black"
            android:textSize="22px" />

        <TextView
            android:id="@+id/hint_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hint_day"
            android:layout_marginLeft="270px"
            android:text="科目"
            android:textSize="25px" />

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hint_day"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/hint_subject"
            android:text="科目二"
            android:textColor="@android:color/black"
            android:textSize="22px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rel_parm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hint_day">

            <TextView
                android:id="@+id/hint_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学车时间"
                android:textSize="25px" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/hint_time"
                android:text="8:00-9:00"
                android:textColor="@android:color/black"
                android:textSize="22px" />


            <TextView
                android:id="@+id/hint_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270px"
                android:text="类型"
                android:textSize="25px" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/hint_type"
                android:text="C1"
                android:textColor="@android:color/black"
                android:textSize="22px" />


        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rel_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_parm"
            android:layout_marginBottom="15px"
            android:layout_marginTop="15px">

            <TextView
                android:id="@+id/hint_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间"
                android:textSize="25px" />

            <TextView
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/hint_create_time"
                android:text="2016-4-15 8:00:00"
                android:textColor="@android:color/black"
                android:textSize="22px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_time">

            <TextView
                android:id="@+id/hint_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;点"
                android:textSize="25px" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/hint_address"
                android:text="重庆市南坪XXXXX"
                android:textColor="@android:color/black"
                android:textSize="22px" />
        </com.zhy.autolayout.AutoRelativeLayout>


        <TextView
            android:id="@+id/record_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_gray_bak"
            android:padding="10px"
            android:text="已完成" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>