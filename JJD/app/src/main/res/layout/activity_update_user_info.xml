<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bak_gray"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px">

        <include layout="@layout/layout_top_bar" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="20px"
            android:paddingRight="30px"
            android:text="保存"
            android:textColor="@android:color/white" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_bak"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--图片-->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bak_gray">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_auto_baseheight="width">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_image_add" />

                    <ImageView
                        android:id="@+id/remove1"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="10px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_community_release_remove"
                        android:visibility="gone" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="@dimen/update_user_image_size"
                        android:layout_height="@dimen/update_user_image_size"
                        android:layout_marginBottom="1dp"
                        app:layout_auto_baseheight="width">

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_image_add" />

                        <ImageView
                            android:id="@+id/remove2"
                            android:layout_width="50px"
                            android:layout_height="50px"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:padding="10px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_community_release_remove"
                            android:visibility="gone" />

                    </com.zhy.autolayout.AutoRelativeLayout>

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="@dimen/update_user_image_size"
                        android:layout_height="@dimen/update_user_image_size"
                        app:layout_auto_baseheight="width">

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_image_add" />

                        <ImageView
                            android:id="@+id/remove3"
                            android:layout_width="50px"
                            android:layout_height="50px"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:padding="10px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_community_release_remove"
                            android:visibility="gone" />
                    </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bak_gray" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bak_gray">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/update_user_image_size"
                    android:layout_weight="1"
                    app:layout_auto_baseheight="width">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_image_add" />

                    <ImageView
                        android:id="@+id/remove4"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="10px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_community_release_remove"
                        android:visibility="gone" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="@dimen/update_user_image_size"
                    android:layout_height="@dimen/update_user_image_size"
                    android:layout_marginLeft="1dp"
                    app:layout_auto_baseheight="width">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_image_add" />

                    <ImageView
                        android:id="@+id/remove5"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="10px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_community_release_remove"
                        android:visibility="gone" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="@dimen/update_user_image_size"
                    android:layout_height="@dimen/update_user_image_size"
                    android:layout_marginLeft="1dp"
                    app:layout_auto_baseheight="width">

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_image_add" />

                    <ImageView
                        android:id="@+id/remove6"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="10px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_community_release_remove"
                        android:visibility="gone" />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>
            <!--图片-->


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="10px">

                <com.zhy.autolayout.AutoRelativeLayout
                    style="@style/UpdateUserInfoItemRel"
                    android:layout_marginTop="@dimen/size_10px">

                    <TextView
                        style="@style/UpdateUserInfoItemHint"
                        android:text="姓名" />

                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/name"
                        style="@style/UpdateUserInfoItem"
                        android:background="@android:color/transparent"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingRight="@dimen/size_50px" />

                    <TextView style="@style/UpdateUserInfoItemLine" />

                    <ImageView style="@style/UpdateUserInfoItemImage" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout style="@style/UpdateUserInfoItemRel">

                    <TextView
                        style="@style/UpdateUserInfoItemHint"
                        android:text="性别" />

                    <TextView
                        android:id="@+id/sex"
                        style="@style/UpdateUserInfoItem" />

                    <TextView style="@style/UpdateUserInfoItemLine" />

                    <ImageView style="@style/UpdateUserInfoItemImage" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout style="@style/UpdateUserInfoItemRel">

                    <TextView
                        style="@style/UpdateUserInfoItemHint"
                        android:text="@string/user_info_declaration_hint" />

                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/declaration"
                        style="@style/UpdateUserInfoItem"
                        android:layout_marginRight="@dimen/size_50px"
                        android:background="@android:color/transparent"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <TextView style="@style/UpdateUserInfoItemLine" />

                    <ImageView style="@style/UpdateUserInfoItemImage" />

                </com.zhy.autolayout.AutoRelativeLayout>


                <com.zhy.autolayout.AutoRelativeLayout style="@style/UpdateUserInfoItemRel">

                    <TextView
                        style="@style/UpdateUserInfoItemHint"
                        android:text="@string/user_info_birthday_hint" />

                    <TextView
                        android:id="@+id/birthday"
                        style="@style/UpdateUserInfoItem" />

                    <TextView style="@style/UpdateUserInfoItemLine" />

                    <ImageView style="@style/UpdateUserInfoItemImage" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout style="@style/UpdateUserInfoItemRel">

                    <TextView
                        style="@style/UpdateUserInfoItemHint"
                        android:text="@string/user_info_address_hint" />

                    <TextView
                        android:id="@+id/address"
                        style="@style/UpdateUserInfoItem" />

                    <TextView style="@style/UpdateUserInfoItemLine" />

                    <ImageView style="@style/UpdateUserInfoItemImage" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout style="@style/UpdateUserInfoItemRel">

                    <TextView
                        style="@style/UpdateUserInfoItemHint"
                        android:text="@string/user_info_address_info_hint" />

                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/address_info"
                        style="@style/UpdateUserInfoItem"
                        android:layout_marginRight="@dimen/size_50px"
                        android:background="@android:color/transparent"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <TextView style="@style/UpdateUserInfoItemLine" />

                    <ImageView style="@style/UpdateUserInfoItemImage" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout style="@style/UpdateUserInfoItemRel">

                    <TextView
                        style="@style/UpdateUserInfoItemHint"
                        android:text="@string/user_info_status_hint" />

                    <TextView
                        android:id="@+id/status"
                        style="@style/UpdateUserInfoItem" />

                    <TextView style="@style/UpdateUserInfoItemLine" />

                    <ImageView style="@style/UpdateUserInfoItemImage" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout style="@style/UpdateUserInfoItemRel">

                    <TextView
                        style="@style/UpdateUserInfoItemHint"
                        android:text="@string/user_info_constellation_hint" />

                    <TextView
                        android:id="@+id/constellation"
                        style="@style/UpdateUserInfoItem" />

                    <TextView style="@style/UpdateUserInfoItemLine" />

                    <ImageView style="@style/UpdateUserInfoItemImage" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rel_byUser"
                    style="@style/UpdateUserInfoItemRel"
                    android:visibility="gone">

                    <TextView
                        style="@style/UpdateUserInfoItemHint"
                        android:text="@string/user_info_byuser_hint" />

                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/byUser"
                        style="@style/UpdateUserInfoItem"
                        android:background="@android:color/transparent"
                        android:hint="请输入推荐人注册手机号码"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingRight="@dimen/size_50px"
                        android:text="" />

                    <TextView style="@style/UpdateUserInfoItemLine" />

                    <ImageView style="@style/UpdateUserInfoItemImage" />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>


</com.zhy.autolayout.AutoLinearLayout>
