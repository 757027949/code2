<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/bakImage"
        android:layout_width="wrap_content"
        android:layout_height="350px"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_community_sing_in_bak" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="350px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:gravity="center"
            android:text="签到成功"
            android:textColor="@android:color/white"
            android:textSize="50px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:src="@mipmap/ic_community_sing_in" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日签到&#160;&#160;&#160;&#160;第"
                    android:textColor="#999"
                    android:textSize="25px" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/top_bar_bak"
                    android:textSize="25px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名"
                    android:textColor="#999"
                    android:textSize="25px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经验"
                    android:textColor="#999"
                    android:textSize="25px" />

                <com.liulishuo.magicprogresswidget.MagicProgressBar
                    android:id="@+id/bar"
                    android:layout_width="150px"
                    android:layout_height="20px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    app:mpb_background_color="@color/bak_gray"
                    app:mpb_fill_color="@color/top_bar_bak"
                    app:mpb_flat="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:textColor="@color/top_bar_bak"
                    android:textSize="25px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经验值："
                    android:textColor="#999"
                    android:textSize="25px" />

                <TextView
                    android:id="@+id/current_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:text="100"
                    android:textColor="@color/top_bar_bak"
                    android:textSize="25px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="#999"
                    android:textSize="25px" />

                <TextView
                    android:id="@+id/need_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textColor="#999"
                    android:textSize="25px" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

