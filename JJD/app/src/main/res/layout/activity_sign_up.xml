<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bak"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="60px"
        android:paddingRight="50px">

        <TextView
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/gray"
            android:textSize="35px" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@drawable/edit_bak"
            android:hint="请输入姓名"
            android:maxLength="10"
            android:padding="20px"
            android:singleLine="true"
            android:textSize="30px"
            app:emptyErrorString="@string/edittext_empty_error_txt" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="60px"
        android:paddingRight="50px">

        <TextView
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="报名地址"
            android:textColor="@color/gray"
            android:textSize="35px" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@drawable/edit_bak"
            android:drawableRight="@drawable/ic_option"
            android:gravity="center_vertical"
            android:hint="请选择报名地址"
            android:padding="20px"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="60px"
        android:paddingRight="50px">

        <TextView
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="15px"
            android:text="详细地址"
            android:textColor="@color/gray"
            android:textSize="35px" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/address_info"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginBottom="5px"
            android:layout_marginTop="5px"
            android:background="@drawable/edit_bak"
            android:hint="请输入详细地址"
            android:maxLength="30"
            android:padding="20px"
            android:textSize="30px"
            app:emptyErrorString="@string/edittext_empty_error_txt" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="60px"
        android:paddingRight="50px">

        <TextView
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textColor="@color/gray"
            android:textSize="35px" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@drawable/edit_bak"
            android:hint="请输入电话"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="20px"
            android:singleLine="true"
            android:textSize="30px"
            app:customRegexp="[1][34578]\\d{9}"
            app:emptyErrorString="@string/edittext_empty_error_txt"
            app:testErrorString="@string/edittext_phone_error_txt"
            app:testType="regexp" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="60px"
        android:paddingRight="50px">

        <TextView
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="学车类型"
            android:textColor="@color/gray"
            android:textSize="35px" />

        <TextView
            android:id="@+id/type"
            android:layout_width="400px"
            android:layout_height="80px"
            android:background="@drawable/edit_bak"
            android:drawableRight="@drawable/ic_option"
            android:gravity="center"
            android:padding="20px"
            android:text="C1（手动档）"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_margin="60px"
        android:background="@drawable/button_bak"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="35px" />


</com.zhy.autolayout.AutoLinearLayout>
