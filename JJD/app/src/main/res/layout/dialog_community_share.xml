<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50px">


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_community_share_bak"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20px">

            <TextView
                android:id="@+id/send_who"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:textSize="35px"
                android:layout_marginBottom="10px"
                android:text="分享到"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/image"
                    android:layout_width="350px"
                    android:layout_height="270px"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_person"
                    app:layout_auto_baseheight="width"
                    app:sriv_border_color="@color/gray"
                    app:sriv_border_width="1dp"
                    app:sriv_left_bottom_corner_radius="5dip"
                    app:sriv_left_top_corner_radius="5dip"
                    app:sriv_oval="false"
                    app:sriv_right_bottom_corner_radius="5dip"
                    app:sriv_right_top_corner_radius="5dip" />

                <TextView
                    android:id="@+id/who"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#999"
                    android:textSize="35px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/community_college_bak"
                android:paddingBottom="5px"
                android:paddingLeft="15px"
                android:paddingRight="15px"
                android:paddingTop="5px"
                android:layout_marginBottom="15px"
                android:layout_marginTop="10px"

                android:textColor="@android:color/white"
                android:textSize="25px" />

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/mes"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@drawable/community_evaluate_bak"
                android:drawablePadding="20px"
                android:hint="说说你的想法吧"
                android:paddingLeft="25px"
                android:textColor="#666"
                android:textColorHint="#999"
                android:textSize="30px"
                app:emptyErrorString="@string/edittext_empty_error_txt" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#666" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_75px">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#666"
                android:textSize="30px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#666" />

            <TextView
                android:id="@+id/sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/green"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
