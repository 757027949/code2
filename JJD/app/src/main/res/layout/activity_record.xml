<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bak"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <com.asd.android.widget.MyRadioGroup
        android:id="@+id/rbGroup_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100px"
        android:background="@android:color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rb_complete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/option_status_bak"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="10px"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@color/text_bespeak_teacher"
                android:textSize="28px" />

            <RadioButton
                android:id="@+id/rb_uncomplete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/option_status_bak"
                android:button="@null"
                android:drawablePadding="10px"
                android:gravity="center"
                android:text="未完成"
                android:textColor="@color/text_bespeak_teacher"
                android:textSize="28px" />


        </com.zhy.autolayout.AutoLinearLayout>

    </com.asd.android.widget.MyRadioGroup>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</com.zhy.autolayout.AutoLinearLayout>
