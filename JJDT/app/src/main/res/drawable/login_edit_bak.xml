<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:color="@color/option_status" android:width="1dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
</layer-list>