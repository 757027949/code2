<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bak"
    android:orientation="vertical">

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bak"
            android:scrollbars="none">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/line_am"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20px"
                        android:text="上午"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/am_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="70px"
                        android:padding="20px"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/am_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="70px"
                        android:padding="20px"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/am_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20px"
                        android:singleLine="true"
                        android:tag=""
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/option_status"/>

                <com.asd.android.widget.scrollview.MyListView
                    android:id="@+id/am_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@color/option_status"
                    android:dividerHeight="1dp"
                    android:listSelector="@android:color/transparent"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:scrollbars="none" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/line_pm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20px"
                        android:text="下午"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/pm_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="70px"
                        android:padding="20px"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/pm_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="70px"
                        android:padding="20px"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/pm_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="20px"
                        android:singleLine="true"
                        android:tag=""
                        android:textColor="@android:color/darker_gray"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/option_status"/>

                <com.asd.android.widget.scrollview.MyListView
                    android:id="@+id/pm_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@color/option_status"
                    android:dividerHeight="1dp"
                    android:listSelector="@android:color/transparent"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:scrollbars="none" />

                <Button
                    android:id="@+id/commit"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_marginBottom="30px"
                    android:layout_marginLeft="80px"
                    android:layout_marginRight="80px"
                    android:layout_marginTop="30px"
                    android:background="@drawable/button_bak"
                    android:text="提交"
                    android:textColor="@android:color/white"
                    android:textSize="35px"
                    android:visibility="gone" />
            </com.zhy.autolayout.AutoLinearLayout>
        </ScrollView>
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>
</com.zhy.autolayout.AutoLinearLayout>
